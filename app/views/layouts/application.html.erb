<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @title || 'ReviseAndCorrect' %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <nav class="navbar navbar-light bg-light mr-auto" style="margin-bottom: 20px;">
        <%= link_to "All Tweets", root_path, class: 'navbar-brand' %>
        <%= link_to 'Watch a new Twitter Account', new_twitter_account_path, class: 'nav-link' %>
        <%= link_to 'Logout', session_path(1), class: 'nav-link', method: :delete %>
      </nav>
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
